<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.github.adsuper.androido.MainActivity">

    <!--typeface  设置字体样式-->
    <!--autoSizeTextType 自动根据布局改变字体大小-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:autoSizeTextType="uniform"
        android:text="Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!Hello World!"
        android:autoSizeMinTextSize="1sp"
        android:autoSizeMaxTextSize="100sp"
        android:typeface="serif"/>

<Button
    android:text="PIPActivity"
    android:id="@+id/btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

</LinearLayout>
